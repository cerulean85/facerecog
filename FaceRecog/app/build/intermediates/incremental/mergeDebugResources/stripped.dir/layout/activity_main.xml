    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        bind:context=".ui.main.MainActivity" android:tag="layout/activity_main_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:bind="http://schemas.android.com/tools">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_face_enroll"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:tag="binding_1"                                
                android:text="얼굴 등록"></Button>

            <Button
                android:id="@+id/btn_face_recog"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:tag="binding_2"                               
                android:text="얼굴 인식"></Button>

            <Button
                android:id="@+id/btn_confirm_info"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:tag="binding_3"                               
                android:text="등록 정보 확인"></Button>
        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
         